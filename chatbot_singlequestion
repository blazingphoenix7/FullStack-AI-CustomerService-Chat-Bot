import openai
import os

class SingleQuestionChatbot:
    def __init__(self, api_key: str, model_name: str = "text-davinci-003"):
        """
        Initialize the SingleQuestionChatbot with the API key and model name.
        :param api_key: The OpenAI API key for authentication
        :param model_name: The GPT model to be used for answering questions (e.g., "text-davinci-003")
        """
        self.api_key = api_key
        self.model_name = model_name
        openai.api_key = self.api_key

    def ask_question(self, question: str) -> str:
        """
        Get an answer from the chatbot for a given question.
        :param question: The question to be asked
        :return: The answer provided by the model
        """
        try:
            response = openai.Completion.create(
                engine=self.model_name,
                prompt=question,
                max_tokens=150
            )
            return response.choices[0].text.strip()
        except openai.error.OpenAIError as e:
            return f"Error: Failed to get a response. Details: {e}"
        except Exception as e:
            return f"Unexpected error: {e}"

if __name__ == "__main__":
    # Set the environment variables or replace with your OpenAI API key
    api_key = os.getenv("OPENAI_API_KEY", "your-api-key-here")

    # Create an instance of SingleQuestionChatbot
    chatbot = SingleQuestionChatbot(api_key)

    # Example usage
    question = "How can I create an account?"
    answer = chatbot.ask_question(question)
    print(f"Question: {question}\nAnswer: {answer}")